const messageSchema = z.object({
  content: z.string()
    .min(1, 'Message cannot be empty')
    .max(10000, 'Message too long')
    .regex(/^[^<>]*$/, 'Invalid characters detected'),
  
  sessionId: z.string().uuid('Invalid session ID'),
  
