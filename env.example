# LobeChat Environment Configuration
# Copy this file to .env.local and update the values

# Application URL (required in server mode)
APP_URL=https://your-domain.com

# Access Control (optional)
ACCESS_CODE=your-access-code-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/lobe_chat

# Authentication (optional)
ENABLE_AUTH_PROTECTION=0

# Sentry (optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Custom Font (optional)
CUSTOM_FONT_FAMILY=
CUSTOM_FONT_URL=

# CDN Configuration (optional)
CDN_USE_GLOBAL=0

# Security Settings
SSRF_ALLOW_PRIVATE_IP_ADDRESS=0
SSRF_ALLOW_IP_ADDRESS_LIST=

# Agent Configuration (optional)
AGENTS_INDEX_URL=https://registry.npmmirror.com/@lobehub/agents-index/v1/files/public
DEFAULT_AGENT_CONFIG=
SYSTEM_AGENT=

# Plugin Configuration (optional)
PLUGINS_INDEX_URL=https://registry.npmmirror.com/@lobehub/plugins-index/v1/files/public
PLUGIN_SETTINGS=

# OIDC Configuration (optional)
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ISSUER=

# Knowledge Base Configuration (optional)
KNOWLEDGE_BASE_URL=
KNOWLEDGE_BASE_API_KEY=

# Tools Configuration (optional)
TOOLS_CONFIG=

# Debug Configuration (optional)
DEBUG_MODE=0



