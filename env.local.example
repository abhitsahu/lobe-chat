# LobeChat Complete Environment Configuration
# Copy this file to .env.local and update the values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application URL (required in server mode)
APP_URL=http://localhost:3000

# Access Control (optional) - Set a password to protect your instance
ACCESS_CODE=your-secure-password-here

# Enable authentication protection (0 = disabled, 1 = enabled)
ENABLE_AUTH_PROTECTION=0

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# OpenAI Configuration (Most Popular)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_PROXY_URL=https://api.openai.com/v1
OPENAI_MODEL_LIST=+gpt-4,-gpt-3.5-turbo,gpt-4-turbo=GPT-4 Turbo

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_PROXY_URL=https://api.anthropic.com

# Google Gemini Configuration
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_PROXY_URL=https://generativelanguage.googleapis.com/v1beta

# Azure OpenAI Configuration
AZURE_API_KEY=your-azure-key-here
AZURE_API_VERSION=2024-02-15-preview
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_DEPLOYMENT_NAME=your-deployment-name

# Ollama Configuration (Local AI)
OLLAMA_PROXY_URL=http://localhost:11434
OLLAMA_MODEL_LIST=+llama2,+codellama,-gpt-3.5-turbo

# OpenRouter Configuration (Access to multiple models)
OPENROUTER_API_KEY=sk-or-your-openrouter-key-here
OPENROUTER_PROXY_URL=https://openrouter.ai/api/v1

# Groq Configuration (Fast inference)
GROQ_API_KEY=gsk_your-groq-key-here
GROQ_PROXY_URL=https://api.groq.com/openai/v1

# Together AI Configuration
TOGETHER_API_KEY=your-together-api-key-here
TOGETHER_PROXY_URL=https://api.together.xyz/v1

# DeepSeek Configuration
DEEPSEEK_API_KEY=sk-your-deepseek-key-here
DEEPSEEK_PROXY_URL=https://api.deepseek.com/v1

# Moonshot AI Configuration
MOONSHOT_API_KEY=sk-your-moonshot-key-here
MOONSHOT_PROXY_URL=https://api.moonshot.cn/v1

# Zhipu AI Configuration
ZHIPU_API_KEY=your-zhipu-api-key-here
ZHIPU_PROXY_URL=https://open.bigmodel.cn/api/paas/v4

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/lobe_chat

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# OIDC Configuration (for external authentication)
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_ISSUER=https://your-issuer.com

# Auth0 Configuration
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_ISSUER=https://your-domain.auth0.com

# Okta Configuration
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret
OKTA_ISSUER=https://your-domain.okta.com

# =============================================================================
# PLUGIN AND TOOL CONFIGURATION
# =============================================================================

# Plugin Configuration
PLUGINS_INDEX_URL=https://registry.npmmirror.com/@lobehub/plugins-index/v1/files/public
PLUGIN_SETTINGS={"enabled":true,"list":[]}

# Tools Configuration
TOOLS_CONFIG={"webSearch":{"enabled":true},"imageGeneration":{"enabled":true},"fileUpload":{"enabled":true}}

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Configuration
AGENTS_INDEX_URL=https://registry.npmmirror.com/@lobehub/agents-index/v1/files/public
DEFAULT_AGENT_CONFIG={"systemRole":"You are a helpful assistant","model":"gpt-4"}
SYSTEM_AGENT={"name":"System","description":"System assistant"}

# =============================================================================
# KNOWLEDGE BASE CONFIGURATION
# =============================================================================

# Knowledge Base Configuration
KNOWLEDGE_BASE_URL=https://your-kb-url.com
KNOWLEDGE_BASE_API_KEY=your-kb-api-key

# =============================================================================
# IMAGE GENERATION CONFIGURATION
# =============================================================================

# DALL-E Configuration
DALLE_API_KEY=sk-your-openai-key-here

# Midjourney Configuration (if using Midjourney plugin)
MIDJOURNEY_API_KEY=your-midjourney-key-here
MIDJOURNEY_PROXY_URL=https://api.midjourney.com/v1

# =============================================================================
# VOICE CONFIGURATION
# =============================================================================

# Text-to-Speech Configuration
TTS_API_KEY=your-tts-api-key-here
TTS_PROXY_URL=https://api.elevenlabs.io/v1

# Speech-to-Text Configuration
STT_API_KEY=your-stt-api-key-here
STT_PROXY_URL=https://api.openai.com/v1/audio

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Settings
SSRF_ALLOW_PRIVATE_IP_ADDRESS=0
SSRF_ALLOW_IP_ADDRESS_LIST=

# =============================================================================
# MONITORING AND DEBUGGING
# =============================================================================

# Sentry Configuration (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Debug Configuration
DEBUG_MODE=0

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Custom Font Configuration
CUSTOM_FONT_FAMILY=
CUSTOM_FONT_URL=

# CDN Configuration
CDN_USE_GLOBAL=0

# =============================================================================
# QUICK START CONFIGURATION
# =============================================================================

# For quick testing, uncomment and configure ONE of these:

# Option 1: OpenAI (Recommended for beginners)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Option 2: Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Option 3: Google Gemini
# GOOGLE_API_KEY=your-google-api-key-here

# Option 4: Ollama (Local AI - no API key needed)
# OLLAMA_PROXY_URL=http://localhost:11434

# =============================================================================
# NOTES
# =============================================================================

# 1. At least one AI provider API key is required
# 2. For local development, you can use Ollama (free, local AI)
# 3. For production, use a cloud provider like OpenAI or Anthropic
# 4. Some providers require additional setup (e.g., Azure requires endpoint configuration)
# 5. Check the documentation for each provider for specific requirements
